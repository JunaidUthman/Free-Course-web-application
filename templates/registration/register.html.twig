{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-300">
    <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-6">
        <!-- Flash Messages -->
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 text-red-700 p-3 rounded-md mb-4">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="text-2xl font-semibold text-gray-800 text-center mb-4">Create an Account</h1>

        {{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}

            <!-- Full Name -->
            <div>
                <label class="block text-gray-700 font-medium">{{ form_label(registrationForm.fullname) }}</label>
                {{ form_widget(registrationForm.fullname, { attr: { class: 'w-full px-4 py-2 border rounded-lg focus:ring focus:ring-gray-500 focus:border-gray-500' } }) }}
                {{ form_errors(registrationForm.fullname) }}
            </div>

            <!-- Email -->
            <div>
                <label class="block text-gray-700 font-medium">{{ form_label(registrationForm.email) }}</label>
                {{ form_widget(registrationForm.email, { attr: { class: 'w-full px-4 py-2 border rounded-lg focus:ring focus:ring-gray-500 focus:border-gray-500' } }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <!-- Password -->
            <div>
                <label class="block text-gray-700 font-medium">{{ form_label(registrationForm.plainPassword) }}</label>
                {{ form_widget(registrationForm.plainPassword, { attr: { class: 'w-full px-4 py-2 border rounded-lg focus:ring focus:ring-gray-500 focus:border-gray-500' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <!-- Agree to Terms -->
            <div class="flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'w-5 h-5' } }) }}
                <label class="text-gray-700">{{ form_label(registrationForm.agreeTerms) }}</label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-gray-800 text-white py-2 rounded-lg hover:bg-gray-700 transition duration-300">
                Register
            </button>

        {{ form_end(registrationForm) }}

        <!-- Login Link -->
        <p class="text-center text-gray-600 mt-4">Already have an account? 
            <a href="{{ path('app_login') }}" class="text-gray-800 font-medium hover:underline">Login</a>
        </p>
        <a class="text-center" href="{{ path('app_main') }}">Home Page</a>
    </div>
</div>
{% endblock %}
